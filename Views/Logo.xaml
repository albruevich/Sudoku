    <Grid
        Name="logoGrid"
        Width="300"
        Height="300">
        <Grid.RenderTransform>
            <RotateTransform Angle="45" CenterX="150" CenterY="150" />
        </Grid.RenderTransform>
        <Grid.Resources>
            <Style TargetType="TextBox">
                <Setter Property="Background" Value="#00000000" />
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="FontSize" Value="71" />
                <Setter Property="FontWeight" Value="Bold" />
                <Setter Property="Foreground" Value="{StaticResource ForgroundColor}" />
            </Style>
            <Style TargetType="Line">
                <Setter Property="Stroke" Value="{StaticResource ForgroundColor}" />
                <Setter Property="StrokeThickness" Value="10" />

            </Style>
        </Grid.Resources>
        <ScrollViewer VerticalScrollBarVisibility="Hidden">
            <Canvas Name="LogoCanvas">
                <Border
                    Width="300"
                    Height="300"
                    BorderBrush="{StaticResource ForgroundColor}"
                    BorderThickness="10"
                    CornerRadius="25">
                    <Canvas>
                        <Line
                            X1="0"
                            X2="290"
                            Y1="97.5"
                            Y2="97.5" />
                        <Line
                            X1="0"
                            X2="290"
                            Y1="195"
                            Y2="195" />
                        <Line
                            X1="97.5"
                            X2="97.5"
                            Y1="0"
                            Y2="290" />
                        <Line
                            X1="195"
                            X2="195"
                            Y1="0"
                            Y2="290" />
                        <TextBox
                            Canvas.Left="25"
                            Canvas.Top="0"
                            Text="2" />
                        <TextBox
                            Canvas.Left="123"
                            Canvas.Top="0"
                            Text="9" />
                        <TextBox
                            Canvas.Left="221"
                            Canvas.Top="0"
                            Text="7" />
                        <TextBox
                            Canvas.Left="25"
                            Canvas.Top="99"
                            Text="4" />
                        <TextBox
                            Canvas.Left="123"
                            Canvas.Top="99"
                            Text="1" />
                        <TextBox
                            Canvas.Left="221"
                            Canvas.Top="99"
                            Text="5" />

                        <TextBox
                            Canvas.Left="25"
                            Canvas.Top="196"
                            Text="6" />
                        <TextBox
                            Canvas.Left="123"
                            Canvas.Top="196"
                            Text="8" />
                        <TextBox
                            Canvas.Left="221"
                            Canvas.Top="196"
                            Text="3" />
                    </Canvas>
                </Border>
            </Canvas>
        </ScrollViewer>
    </Grid>
</UserControl>
