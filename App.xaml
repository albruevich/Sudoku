<Application
    x:Class="Sudoku.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Sudoku"
    StartupUri="Views/MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="GameButtonsColor">#DDFFDD</SolidColorBrush>
        <SolidColorBrush x:Key="ForgroundColor">#004411</SolidColorBrush>
        <SolidColorBrush x:Key="BadForgroundColor">#FF1111</SolidColorBrush>
        <SolidColorBrush x:Key="SelectedColor">#B0FFC1</SolidColorBrush>
        <SolidColorBrush x:Key="SelectedCellColor">#70FF81</SolidColorBrush>
        <SolidColorBrush x:Key="SelectedNumberColor">#55DD66</SolidColorBrush>
        <SolidColorBrush x:Key="BorderColor" Color="#BBBBBB" />
        <SolidColorBrush x:Key="SelectedBorderColor" Color="#33BB44" />
    </Application.Resources>
</Application>
